generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  discordId    String   @unique
  username     String
  joinedAt     DateTime @default(now())
  commandsUsed Int      @default(0)
  aiUsage      Int      @default(0)
}
